<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<f:SimpleForm id="spAgreementForm" class="sapUiSmallMarginBottom" editable="true" layout="ResponsiveGridLayout" title="" labelSpanXL="2"
		labelSpanL="2" labelSpanM="2" labelSpanS="2" adjustLabelSpan="false" emptySpanXL="3" emptySpanL="3" emptySpanM="3" emptySpanS="2"
		columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
		<f:content>
			<Label text="{i18n>SaleDate}"/>
			<DatePicker id="idDate" placeholder="Enter Date ..."
				value="{path : 'EcpFieldData>/ZecpSaleDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true}}"
				required="true"/>
			<Label text="{i18n>Odometer}"/>
			<Input id="idOdoVal" value="{EcpFieldData>/ZecpOdometer}" type="Number" required="true"/>
			<Label text="{i18n>AgreementType}"/>
			<ComboBox id="idAgrType" selectionChange="onSelectAgrType" required="true" selectedKey="{EcpFieldData>/ZecpAgrType}"
				value="{EcpFieldData>/ZecpAgrType}">
				<core:Item key="{i18n>NEWVEHICLEAGREEMENT}" text="{i18n>NEWVEHICLEAGREEMENT}"/>
				<core:Item key="{i18n>USEDVEHICLEAGREEMENT}" text="{i18n>USEDVEHICLEAGREEMENT}"/>
				<!--<core:Item key="{i18n>EXTENSION}" text="{i18n>EXTENSION}"/>-->
			</ComboBox>
			<Button text="Next" type="Emphasized" press="OnNextStep3"/>
			<Button text="Back" type="Back" press="OnBack"/>
		</f:content>
	</f:SimpleForm>
